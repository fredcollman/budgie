<tr>
	<td class="date-short"><%= format_date(entry.date, :short) %></td>
	<td class="date-long"><%= format_date(entry.date, :long) %></td>
	<td class="amount"><%= number_to_currency(entry.amount, unit: "£") %></td>
	<td class="description"><%= entry.description %></td>
	<td class="balance"><%= number_to_currency(entry.balance, unit: "£") %></td>
</tr>
