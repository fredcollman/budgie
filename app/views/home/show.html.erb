<% if @transactions && @transactions.size > 0 %>
	<table class="striped">
		<thead>
			<tr>
				<th>Date</th>
				<th>Amount</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
		<% @transactions.each do |t| %>
			<tr>
				<td class="date"><%= t.date %></td>
				<td class="amount"><%= number_to_currency(t.amount, unit: "Â£") %></td>
				<td class="description"><%= t.description %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
  <p>No transactions</p>
<% end %>
